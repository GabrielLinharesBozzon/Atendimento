version: '3.8'

services:
  mysql:
    image: mysql:latest
    container_name: mysql-container
    environment:
      MYSQL_ROOT_PASSWORD: 123
    ports:
      - "3306:3306"
    volumes:
      - backend_mysql-data:/var/lib/mysql
    networks:
      - backend_default

volumes:
  backend_mysql-data:
    external: true

networks:
  backend_default:
    external: true
#nao esquece de criar a rede para o acesso cabecao 
#docker network create backend_default
